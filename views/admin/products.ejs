<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>

    <main>
        <% if (products.length > 0) {  %> 
            <div>
                <% for (let prod of products) { %>
                    <article class="card product-item">
                        <header class="card_header">
                            <h1 class="product_title"><%= prod.title %> </h1>
                        </header>
                        <div class="card_image">
                            <img src="<%= prod.imageUrl %>"
                                alt="<%= prod.title %>">
                        </div>
                        <div class="card_content">
                            <h2 class="product_price"><%= prod.price %> RSD</h2>
                            <p class="product_description"><%= prod.description %></p>
                        </div>
                        <div class="card_action">
                            <a href="/admin/edit-product/<%= prod.prod_id %>" class='btn'>Edit</a>
                            <from action="/admin/delete-product" method="POST">
                                <input type='hidden' value="<%= prod.prod_id %>" name="productId">
                                <button type='submit' class='btn'>Delete</button>
                            </from>
                        </div>
                    </article>
                <%  } %>
            </div>
        <%  } else { %>
            <h1>Prodcuts Not Found</h1>   
        <% } %>    
    </main>
    

</body>
</html>